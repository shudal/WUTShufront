.header {
  width:calc(100vw - 20px);
  height:40px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:2px 10px;
}
.header .time-area {
  display:flex;
  flex-direction:row;
  align-items:center;
}
.header .time-area .yearAndMonth {
  display:flex;
  flex-direction:column;
  font-size:13px;
  padding-left:5px;
}
.header .time-area .day {
  font-weight:500;
  font-size:30px;
  margin-right:5px;
}

image {
  width:100vw;
  height:40vh;
}
